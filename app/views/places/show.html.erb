<div class="container">
  <div class="row">
    
    <div class="col-8">
      <div id="map"></div>
    </div>
    <div class="col-4">
      <p>
        <strong>Name:</strong>
        <%= @place.name %>
      </p>

      <p>
        <strong>Latitude:</strong>
        <%= @place.latitude %>
      </p>

      <p>
        <strong>Longitude:</strong>
        <%= @place.longitude %>
      </p>
      
      <p>
        <strong>Is public:</strong>
        <%= @place.is_public %>
      </p>
      
      <p>
        <strong>Shared with:</strong>
        <% @place.shared_users.each do |shared_user| %>
          <li><%= shared_user.name %></li>
        <% end %>
      </p>

      <%= link_to 'Edit', edit_place_path(@place) %> |
      <%= link_to 'Back', places_path %>
    </div>
  </div>
</div>

<script src="https://openlayers.org/en/v5.3.0/build/ol.js" type="text/javascript"></script>
<!-- Openlayesr JS fIle -->
<%= javascript_pack_tag 'map' %>
<!-- Our map file -->
<script type="text/javascript">
  var baseMapLayer = new ol.layer.Tile({
    source: new ol.source.OSM()
  });
  var map = new ol.Map({
    target: 'map',
    layers: [baseMapLayer],
    view: new ol.View({
            center: ol.proj.fromLonLat([<%= @place.longitude %>, <%= @place.latitude %>]), 
            zoom: 10 //Initial Zoom Level
          })
  });
  //Adding a marker on the map
  var marker = new ol.Feature({
    geometry: new ol.geom.Point(
      ol.proj.fromLonLat([<%= @place.longitude %>, <%= @place.latitude %>])
    ),  // Cordinates of New York's Town Hall
  });
  marker.setStyle(new ol.style.Style({
      image: new ol.style.Icon(({
        color: '#ffcd46',
        crossOrigin: 'anonymous',
        src: '<%= asset_path('marker.png') %>'
      }))
  }));
  
  var vectorSource = new ol.source.Vector({
    features: [marker]
  });
  var markerVectorLayer = new ol.layer.Vector({
    source: vectorSource,
  });
  map.addLayer(markerVectorLayer);
</script>
